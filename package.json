{
  "name": "deputy-employee-mgmt",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^5.15.0",
    "@testing-library/react": "^11.2.7",
    "@testing-library/user-event": "^12.8.3",
    "@types/jest": "^27.0.3",
    "@types/node": "^16.11.9",
    "@types/react": "^17.0.36",
    "@types/react-dom": "^17.0.11",
    "bootstrap": "^5.1.3",
    "node-sass": "^6.0.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "4.0.3",
    "typescript": "^4.5.2",
    "web-vitals": "^1.1.2"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "lint:check:js": "eslint \"**/*.{js,jsx}\" --ignore-path .gitignore",
    "lint:fix:js": "eslint \"**/*.{js,jsx}\" --ignore-path .gitignore --fix",
    "lint:check:css": "stylelint \"**/*.{css,less,styl,scss,sass,sss}\" --ignore-path .gitignore",
    "lint:fix:css": "stylelint \"**/*.{css,less,styl,scss,sass,sss}\" --ignore-path .gitignore --fix",
    "lint:checks": "npm run lint:check:js && npm run lint:check:css"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "overrides": [
      {
        "files": [
          "**/*.stories.*"
        ],
        "rules": {
          "import/no-anonymous-default-export": "off"
        }
      }
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "eslint": "^7.32.0",
    "eslint-plugin-react": "^7.27.1",
    "stylelint": "^14.1.0"
  }
}
